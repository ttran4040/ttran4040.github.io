block pageVars
	- var pageTitle    = "Email Application"
	- var pageSubTitle = "Email application."
	//- var description  = ""
	- var activeMenu   = "email-application"

extends template

append pageConfig
	- var contentLayout = 'content-left-sidebar'
	- var pageClass = 'email-application'	

append horizontalMenuConfig
	- var menuType = "navbar-static"
	
append footerConfig
	- var footerType = 'fixed-bottom'
	- var footerColor = 'footer-light'
	- var footerBorder = true

block page-header

//- Include email content in page block
append content
	include ../contents/email-application.html

//- Include email sidebar block
append sidebar
	include ../contents/email-application-sidebar.html

//- Page CSS
//------------------------------

//- Add custom page specific CSS
append pagecss	
	link(rel='stylesheet', type='text/css', href='#{app_assets_path}/fonts/simple-line-icons/style.min.css')
	link(rel='stylesheet', type='text/css', href='#{app_assets_path}/css#{rtl}/pages/email-application.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs	

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs	
	script(src='#{app_assets_path}/js/scripts/pages/email-application.js', type='text/javascript')